                 , binary                    >= 0.5   && < 1
                 , bytestring                >= 0.9.1 && < 0.10
                 , data-lens                 >= 2
                 , data-lens-template        >= 2.1   && < 2.2
                 , directory                 >= 1     && < 2
                 , filepath                  >= 1     && < 2
                 , heist                     >= 0.7   && < 0.9
                 , Holumbus-Searchengine     >= 1.2.3 && < 2
                 , hxt                       >= 9     && < 10
                 , hxt-unicode               >= 9     && < 10
                 , json                      >= 0.4   && < 1
                 , MonadCatchIO-transformers >= 0.2.1 && < 0.3
                 , mtl                       >= 2     && < 3
                 , network                   >= 2
                 , old-locale                >= 1     && < 2
                 , old-time                  >= 1     && < 2
                 , parsec                    >= 2     && < 4
                 , snap                      >= 0.8   && < 0.9
                 , snap-core                 >= 0.8   && < 0.9
                 , snap-server               >= 0.8   && < 0.9
                 , text                      >= 0.11  && < 1
                 , transformers              >= 0.2.2 && < 0.3
                 , xmlhtml                   >= 0.1   && < 0.2

  if impl( ghc < 7.4 )
    build-depends: containers                >= 0.2   && < 0.4.2
                 , deepseq                   >= 1.1   && < 1.2
  else
    build-depends: containers                >= 0.4.2
                 , deepseq                   >= 1.2

  extensions:    TypeSynonymInstances, MultiParamTypeClasses

  ghc-options:   -threaded
                 -Wall
                 -funbox-strict-fields
                 -fno-warn-orphans

  if impl( ghc >= 7 )
    ghc-options: -rtsopts
                 -fwarn-tabs
                 -fno-warn-unused-do-bind

  extensions:    CPP

  cpp-options:   -DhashedIndex=0
                 -DhayooSnap4=0

