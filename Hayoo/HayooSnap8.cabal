  hs-source-dirs:  src

  main-is:         HayooSnap8.hs
  
  other-modules:   Hayoo.FunctionInfo
                 , Hayoo.IndexTypes
                 , Hayoo.PackageInfo
                 , Hayoo.PackageRank
                 , Hayoo.Search.Common
                 , Hayoo.Search.EvalSearch
